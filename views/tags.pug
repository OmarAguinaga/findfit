extends layout
include mixins/_gymCard
block content
  .inner
    h2 #{tag ||'Tags'}
    ul.tags
      each t in tags
        li.tag
          a.tag__link(href=`/tags/${t._id}` class=(t._id === tag ? 'tag__link--active' : ''))
            span.tag__text= t._id
            spam.tag__count= t.count
    
    .gyms
      each gym in gyms
        +gymCard(gym)

